<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/color_white"
    android:gravity="bottom"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_line" />

    <LinearLayout
        android:id="@+id/main_tab_group"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/tab_height"
        android:colorControlHighlight="@color/color_ripple"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_tab_1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/tab_deliver_height"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_tab_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tab_score_btn" />

            <TextView
                android:id="@+id/txt_tab_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tab_deliver_height"
                android:text="@string/tab_text_1"
                android:textColor="@color/tab_text_normal_color"
                android:textSize="@dimen/text_12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_tab_2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/tab_deliver_height"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/img_tab_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tab_team_btn" />

            <TextView
                android:id="@+id/txt_tab_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tab_deliver_height"
                android:text="@string/tab_text_2"
                android:textColor="@color/tab_text_normal_color"
                android:textSize="@dimen/text_12" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_tab_4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/tab_deliver_height"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_tab_4"
                android:layout_width="@dimen/tab_image_width"
                android:layout_height="@dimen/tab_image_width"
                android:src="@drawable/tab_kf_btn" />

            <TextView
                android:id="@+id/txt_tab_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tab_deliver_height"
                android:text="@string/tab_text_3"
                android:textColor="@color/tab_text_normal_color"
                android:textSize="@dimen/text_12" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_tab_3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/tab_deliver_height"
            android:layout_weight="1.0"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ll_tab_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/img_tab_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tab_mine_btn" />

                <TextView
                    android:id="@+id/txt_tab_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_tab_3"
                    android:layout_marginTop="@dimen/tab_deliver_height"
                    android:text="@string/tab_text_4"
                    android:textColor="@color/tab_text_normal_color"
                    android:textSize="@dimen/text_12" />


            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>