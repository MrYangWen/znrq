<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_activity_bg"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_height"
        android:background="@color/color_white" />

    <com.cq.xm.znrq.view.TemplateTitle
        android:id="@+id/tt_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/color_white"
        app:backImage="@mipmap/fanhui_heise"
        app:canBack="true"
        app:textcolor="@color/color_text_dark"
        app:titleText="忘记密码" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@color/color_white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_name"
            style="@style/Regist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/yhm"
            android:drawablePadding="@dimen/margin_15"
            android:gravity="center_vertical"
            android:hint="请输入用户名"
            android:maxLength="10" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_size"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:background="@color/color_line" />

        <EditText
            android:id="@+id/et_mobile"
            style="@style/Regist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/sjh"
            android:drawablePadding="@dimen/margin_15"
            android:gravity="center_vertical"
            android:hint="请输入手机号码"
            android:maxLength="11" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_size"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:background="@color/color_line" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_code"
                style="@style/Regist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/yzm"
                android:drawablePadding="@dimen/margin_15"
                android:gravity="center_vertical"
                android:hint="请输入手机验证码" />

            <TextView
                android:id="@+id/tv_get_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_15"
                android:text="获取验证码"
                android:textColor="@color/color_y"
                android:textSize="@dimen/text_14" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_size"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:background="@color/color_line" />

        <EditText
            android:id="@+id/et_pwd"
            style="@style/Regist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/mm"
            android:drawablePadding="@dimen/margin_15"
            android:gravity="center_vertical"
            android:hint="请输入密码" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_regist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_30"
        android:src="@mipmap/fgpwd_qr" />


</LinearLayout>