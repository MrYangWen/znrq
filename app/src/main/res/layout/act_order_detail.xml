<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:app="http://schemas.android.com/apk/res-auto"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:background="@color/color_activity_bg"
			  android:orientation="vertical">

	<View
		android:layout_width="match_parent"
		android:layout_height="@dimen/status_bar_height"
		android:background="@color/color_white"/>

	<com.cq.xm.znrq.view.TemplateTitle
		android:id="@+id/tv_title"
		android:layout_width="match_parent"
		android:layout_height="@dimen/title_bar_height"
		android:background="@color/color_white"
		app:backImage="@mipmap/fanhui_heise"
		app:canBack="true"
		app:textcolor="@color/color_text_dark"
		app:titleText="用户远程充值"/>


	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/color_line"/>


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/color_white"
		android:orientation="vertical">


		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="@dimen/margin_15">

			<TextView
				android:id="@+id/tv_time"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:drawableLeft="@mipmap/sy_yqxq_hot"
				android:drawablePadding="@dimen/margin_10"
				android:gravity="center"
				android:text="2017年8月"
				android:textColor="@color/color_text_dark"
				android:textSize="@dimen/text_12"
				android:textStyle="bold"/>

			<TextView
				android:id="@+id/tv_money"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_weight="1"
				android:gravity="right"
				android:text="50.00"
				android:textColor="@color/color_text_dark"
				android:textSize="@dimen/text_16"
				android:textStyle="bold"/>


		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="@dimen/margin_10"
			android:visibility="gone">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:text="缴费单位"
				android:textColor="@color/color_text_normal"
				android:textSize="@dimen/text_12"/>

			<TextView
				android:id="@+id/tv_dw"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_weight="1"
				android:gravity="right"
				android:text="重庆燃气集团股份有限公司"
				android:textColor="@color/color_text_normal"
				android:textSize="@dimen/text_12"/>


		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="@dimen/margin_10">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:text="缴费户号"
				android:textColor="@color/color_text_normal"
				android:textSize="@dimen/text_12"/>

			<TextView
				android:id="@+id/tv_huhao"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_weight="1"
				android:gravity="right"
				android:textColor="@color/color_text_normal"
				android:textSize="@dimen/text_12"
				tools:text="5001131885"/>


		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="@dimen/margin_10">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:text="户名"
				android:textColor="@color/color_text_normal"
				android:textSize="@dimen/text_12"/>

			<TextView
				android:id="@+id/tv_huming"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_weight="1"
				android:gravity="right"
				android:textColor="@color/color_text_normal"
				android:textSize="@dimen/text_12"
				tools:text="大鹏"/>


		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="@dimen/margin_10">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:text="住址信息"
				android:textColor="@color/color_text_normal"
				android:textSize="@dimen/text_12"/>

			<TextView
				android:id="@+id/tv_address"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_weight="1"
				android:gravity="right"
				android:textColor="@color/color_text_normal"
				android:textSize="@dimen/text_12"
				tools:text="重庆渝北区金茂时代"/>
		</LinearLayout>


		<View
			android:layout_width="match_parent"
			android:layout_height="1px"
			android:layout_marginBottom="@dimen/margin_10"
			android:layout_marginTop="@dimen/margin_10"
			android:background="@color/color_line"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="@dimen/margin_10">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:text="充值状态"
				android:textColor="@color/color_text_normal"
				android:textSize="@dimen/text_12"/>

			<TextView
				android:id="@+id/tv_writeStat"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_weight="1"
				android:gravity="right"
				android:textColor="@color/color_text_normal"
				android:textSize="@dimen/text_12"
				tools:text="已充值"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="@dimen/margin_10"
			android:visibility="gone">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:text="订单编号"
				android:textColor="@color/color_text_normal"
				android:textSize="@dimen/text_12"/>

			<TextView
				android:id="@+id/tv_orderId"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_weight="1"
				android:gravity="right"
				android:textColor="@color/color_text_normal"
				android:textSize="@dimen/text_12"
				tools:text="10025"/>
		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/margin_30"
		android:gravity="center"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/tv_qx"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:background="@drawable/shadow_103610"
			android:gravity="center"
			android:padding="10dp"
			android:text="取消订单"
			android:textColor="@color/color_white"
			android:textSize="@dimen/text_14"
			android:visibility="gone"
			tools:visibility="visible"/>

		<TextView
			android:id="@+id/tv_zf"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_marginLeft="@dimen/margin_15"
			android:background="@drawable/shadow_103610"
			android:gravity="center"
			android:padding="10dp"
			android:text="继续支付 "
			android:textColor="@color/color_white"
			android:textSize="@dimen/text_14"
			android:visibility="gone"
			tools:visibility="visible"/>
	</LinearLayout>
</LinearLayout>