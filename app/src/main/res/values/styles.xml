<resources>

	<!-- Base application theme. -->
	<style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/color_black</item>
		<item name="colorPrimaryDark">@color/color_black</item>
		<item name="colorAccent">@color/color_black</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:windowActionBar">false</item>
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="appTheme" parent="AppBaseTheme"></style>>

	<!-- 透明wait对话框 -->
	<style name="DialogNoTitleStyleTranslucentBg" parent="android:style/Theme.Dialog">
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowFrame">@null</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowIsFloating">true</item>
	</style>

	<!-- 透明wait对话框 -->
	<style name="DialogTranslucentBg" parent="android:style/Theme.Dialog">
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowFrame">@null</item>
		<item name="android:windowCloseOnTouchOutside">false</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowIsFloating">true</item>
	</style>

	<!-- 圆角alert对话框 -->
	<style name="DialogNoTitleRoundCornerStyle" parent="@android:style/Theme.Dialog">
		<item name="android:windowFrame">@null</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowIsTranslucent">false</item>
		<item name="android:windowNoTitle">true</item>
		<!--<item name="android:windowBackground">@drawable/frame_bg_toast</item>-->
		<item name="android:windowBackground">@color/color_transparent</item>
		<item name="android:backgroundDimEnabled">true</item>
		<item name="android:backgroundDimAmount">0.4</item>
	</style>

	<!--注册-->
	<style name="Regist" parent="Widget.AppCompat.EditText">
		<item name="android:background">@color/color_white</item>
		<item name="android:textColorHint">@color/color_text_light</item>
		<item name="android:paddingTop">@dimen/margin_15</item>
		<item name="android:paddingBottom">@dimen/margin_15</item>
		<item name="android:paddingLeft">@dimen/margin_30</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:textColor">@color/color_text_dark</item>
		<item name="android:textSize">@dimen/text_14</item>
		<item name="android:maxLines">1</item>

	</style>

	<style name="personal" parent="Widget.AppCompat.TextView.SpinnerItem">
		<item name="android:background">@drawable/selector_button_click_bg</item>
		<item name="android:textColorHint">@color/color_text_light</item>
		<item name="android:paddingTop">@dimen/margin_15</item>
		<item name="android:paddingBottom">@dimen/margin_15</item>
		<item name="android:paddingRight">@dimen/margin_15</item>
		<item name="android:paddingLeft">@dimen/margin_20</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:textColor">@color/color_text_normal</item>
		<item name="android:textSize">@dimen/text_14</item>
		<item name="android:maxLines">1</item>

	</style>

	<style name="Widget.Design.AppBarLayout" parent="android:Widget">
		<item name="elevation">0dp</item>
		<item name="android:background">@color/color_white</item>
	</style>

	<style name="dialogAnim" mce_bogus="1" parent="android:Animation">
		<item name="android:windowEnterAnimation">@anim/bottom_in</item>
		<item name="android:windowExitAnimation">@anim/bottom_out</item>
	</style>

	<style name="dialogThemeFullScr" parent="@android:style/Theme.Dialog">
		<!-- 边框 -->
		<item name="android:windowFrame">@null</item>
		<!-- 是否浮现在activity 上 -->
		<item name="android:windowIsFloating">true</item>
		<!-- 半透明 -->
		<item name="android:windowIsTranslucent">false</item>
		<item name="android:background">@null</item>
		<item name="android:windowNoTitle">true</item>
		<!-- 除去title -->
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:backgroundDimEnabled">true</item>
		<item name="android:windowBackground">@color/transparent</item>
		<!--占满屏幕 -->
		<item name="android:windowFullscreen">true</item>
	</style>

	<style name="SplashTheme" parent="AppBaseTheme">
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowIsTranslucent">true</item>
	</style>

</resources>
